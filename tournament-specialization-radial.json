{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Tournament Specialization: Radial View",
    "fontSize": 20,
    "fontWeight": "bold",
    "color": "#9ACD32"
  },
  "description": "Radial chart showing which Grand Slam tournaments each champion dominated.",
  "data": {
    "url": "tournament_specialization.csv"
  },
  "width": 500,
  "height": 500,
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 50,
        "stroke": "white",
        "strokeWidth": 2,
        "tooltip": true
      },
      "encoding": {
        "theta": {
          "field": "titles",
          "type": "quantitative",
          "stack": true
        },
        "radius": {
          "field": "titles",
          "type": "quantitative",
          "scale": {
            "type": "sqrt",
            "zero": true,
            "rangeMin": 50,
            "rangeMax": 200
          }
        },
        "color": {
          "field": "tournament",
          "type": "nominal",
          "scale": {
            "domain": ["Australian Open", "French Open", "Wimbledon", "US Open"],
            "range": ["#e74c3c", "#3498db", "#8e44ad", "#f39c12"]
          },
          "legend": {
            "title": "Tournament",
            "orient": "bottom",
            "titleFontSize": 14,
            "titleColor": "#9ACD32",
            "labelFontSize": 12,
            "direction": "horizontal"
          }
        },
        "order": {
          "field": "player",
          "type": "nominal"
        },
        "tooltip": [
          {
            "field": "player",
            "type": "nominal",
            "title": "Player"
          },
          {
            "field": "tournament",
            "type": "nominal",
            "title": "Tournament"
          },
          {
            "field": "titles",
            "type": "quantitative",
            "title": "Titles Won"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 10,
        "fontSize": 11,
        "fontWeight": "bold"
      },
      "encoding": {
        "text": {
          "field": "player",
          "type": "nominal"
        },
        "theta": {
          "field": "titles",
          "type": "quantitative",
          "stack": true
        },
        "radius": {
          "field": "titles",
          "type": "quantitative",
          "scale": {
            "type": "sqrt",
            "zero": true,
            "rangeMin": 50,
            "rangeMax": 200
          }
        }
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null
    }
  }
}

