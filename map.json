{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/vega/vega-datasets/main/data/world-110m.json",
    "format": {"type": "topojson", "feature": "countries"}
  },
  "transform": [
    {
      "lookup": "id",
      "from": {
        "data": {"url": "real_player_counts.csv"},
        "key": "id",
        "fields": ["players"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "players",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "legend": {"title": "Number of Players"}
    },
    "stroke": {"value": "white"},
    "strokeWidth": {"value": 0.5},
    "tooltip": [
      {"field": "id", "type": "nominal", "title": "Country ID"},
      {"field": "players", "type": "quantitative", "title": "Number of Players"}
    ]
  }
}
