{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Gender Distribution in Professional Tennis: The Rise of Women's Tennis",
    "fontSize": 20,
    "fontWeight": "bold",
    "color": "#9ACD32"
  },
  "description": "Enhanced population pyramid showing male and female participation with percentages, reference line, and annotations.",
  "data": {
    "url": "gender_by_decade.csv"
  },
  "width": 900,
  "height": 400,
  "padding": {"top": 0, "bottom": 80,  "left": 5,"right": 5},
  "transform": [
    {
      "calculate": "datum.gender === 'Male' ? -datum.count : datum.count",
      "as": "signed_count"
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "count",
          "as": "decade_total"
        }
      ],
      "groupby": ["decade"]
    },
    {
      "calculate": "(datum.count / datum.decade_total) * 100",
      "as": "percentage"
    },
    {
      "calculate": "datum.gender === 'Male' ? -datum.percentage : datum.percentage",
      "as": "signed_percentage"
    },
    {
      "calculate": "format(datum.percentage, '.0f') + '%'",
      "as": "percentage_label"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "rule",
        "strokeWidth": 2,
        "strokeDash": [5, 5],
        "color": "#9ACD32",
        "opacity": 0.5
      },
      "encoding": {
        "x": {"datum": 0}
      }
    },
    {
      "mark": {
        "type": "bar",
        "tooltip": true
      },
      "encoding": {
        "y": {
          "field": "decade",
          "type": "ordinal",
          "title": "Birth Decade",
          "axis": {
            "titleFontWeight": "bold",
            "titleColor": "#9ACD32",
            "titleFontSize": 16,
            "labelFontSize": 12
          }
        },
        "x": {
          "field": "signed_count",
          "type": "quantitative",
          "title": "Number of Players",
          "axis": {
            "titleFontWeight": "bold",
            "titleColor": "#9ACD32",
            "titleFontSize": 16,
            "labelFontSize": 13,
            "labelExpr": "abs(datum.value)"
          }
        },
        "color": {
          "field": "gender",
          "type": "nominal",
          "scale": {
            "domain": ["Male", "Female"],
            "range": ["#3498db", "#e74c3c"]
          },
          "legend": {
            "title": "Gender",
            "orient": "top",
            "titleFontSize": 14,
            "titleColor": "#9ACD32",
            "labelFontSize": 12,
            "direction": "horizontal"
          }
        },
        "opacity": {
          "field": "decade",
          "type": "ordinal",
          "scale": {
            "domain": ["1930", "1940", "1950", "1960", "1970", "1980", "1990", "2000"],
            "range": [0.5, 0.55, 0.6, 0.65, 0.7, 0.8, 0.9, 1.0]
          },
          "legend": null
        },
        "tooltip": [
          {
            "field": "decade",
            "type": "ordinal",
            "title": "Birth Decade"
          },
          {
            "field": "gender",
            "type": "nominal",
            "title": "Gender"
          },
          {
            "field": "count",
            "type": "quantitative",
            "title": "Number of Players",
            "format": ","
          },
          {
            "field": "percentage",
            "type": "quantitative",
            "title": "Percentage",
            "format": ".1f"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "datum.gender === 'Male'"
        }
      ],
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "#2c3e50",
        "dx": -25
      },
      "encoding": {
        "y": {
          "field": "decade",
          "type": "ordinal"
        },
        "x": {
          "datum": 0
        },
        "text": {
          "field": "percentage_label",
          "type": "nominal"
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.gender === 'Female'"
        }
      ],
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "#2c3e50",
        "dx": 25
      },
      "encoding": {
        "y": {
          "field": "decade",
          "type": "ordinal"
        },
        "x": {
          "datum": 0
        },
        "text": {
          "field": "percentage_label",
          "type": "nominal"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "← Men",
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "#3498db",
        "dx": -50,
        "dy": -220
      },
      "encoding": {
        "x": {"datum": 0},
        "y": {"datum": "1930"}
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "Women →",
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "#e74c3c",
        "dx": 50,
        "dy": -220
      },
      "encoding": {
        "x": {"datum": 0},
        "y": {"datum": "1930"}
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "⭐ 2000s: HISTORIC TURNING POINT!",
        "fontSize": 15,
        "fontWeight": "bold",
        "color": "#FF8C00",
        "dx": 250,
        "dy": -5
      },
      "encoding": {
        "x": {"datum": 0},
        "y": {"datum": "2000"}
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "First decade with more women than men!",
        "fontSize": 12,
        "fontWeight": "normal",
        "color": "#e74c3c",
        "dx": 250,
        "dy": 12
      },
      "encoding": {
        "x": {"datum": 0},
        "y": {"datum": "2000"}
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "1972: Title IX (USA)",
        "fontSize": 10,
        "color": "#666",
        "dx": -120,
        "dy": 0
      },
      "encoding": {
        "x": {"datum": -8000},
        "y": {"datum": "1970"}
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "1973: WTA Founded",
        "fontSize": 10,
        "color": "#666",
        "dx": -120,
        "dy": 15
      },
      "encoding": {
        "x": {"datum": -8000},
        "y": {"datum": "1970"}
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "grid": true,
      "gridColor": "#f0f0f0",
      "gridOpacity": 0.5,
      "domain": true,
      "ticks": true
    }
  }
}

