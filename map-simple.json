{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1400,
  "height": 800,
  "projection": {
    "type": "naturalEarth1",
    "scale": 280,
    "translate": [600, 400]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/main/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "white",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/main/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {"url": "real_player_counts.csv"},
            "key": "id",
            "fields": ["players", "country_name"]
          }
        },
        {
          "lookup": "id",
          "from": {
            "data": {"url": "population_data.csv"},
            "key": "id",
            "fields": ["population"]
          }
        },
        {
          "calculate": "datum.players / datum.population",
          "as": "players_per_million"
        }
      ],
      "mark": {
        "type": "geoshape",
        "cursor": "pointer"
      },
      "encoding": {
        "color": {
          "field": "players_per_million",
          "type": "quantitative",
          "scale": {
            "scheme": "blues",
            "type": "linear",
            "domain": [0, 200]
          },
          "legend": {
            "title": "Players per Million Population",
            "orient": "right"
          }
        },
        "stroke": {"value": "white"},
        "strokeWidth": {"value": 1},
        "tooltip": [
          {"field": "country_name", "type": "nominal", "title": "Country"},
          {"field": "players", "type": "quantitative", "title": "Total Players"},
          {"field": "players_per_million", "type": "quantitative", "title": "Players per Million", "format": ".1f"}
        ]
      }
    }
  ]
}
