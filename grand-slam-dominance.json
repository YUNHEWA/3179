{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Grand Slam Dominance: The Big Three Era (2005-2025)",
    "fontSize": 20,
    "fontWeight": "bold",
    "color": "#9ACD32"
  },
  "description": "Heatmap showing which players won Grand Slam tournaments each year, revealing the unprecedented dominance of Federer, Nadal, and Djokovic.",
  "data": {
    "url": "grand_slam_champions_timeline.csv"
  },
  "width": 900,
  "height": 400,
  "params": [
    {
      "name": "tournament_select",
      "select": {
        "type": "point",
        "fields": ["tournament"]
      },
      "bind": "legend"
    }
  ],
  "mark": {
    "type": "rect",
    "tooltip": true,
    "cursor": "pointer"
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "titleFontWeight": "bold",
        "titleColor": "#9ACD32",
        "labelAngle": -45,
        "titleFontSize": 16,
        "labelFontSize": 11
      }
    },
    "y": {
      "field": "tournament",
      "type": "nominal",
      "title": "Grand Slam Tournament",
      "sort": ["Australian Open", "French Open", "Wimbledon", "US Open"],
      "axis": {
        "titleFontWeight": "bold",
        "titleColor": "#9ACD32",
        "titleFontSize": 16,
        "labelFontSize": 12
      }
    },
    "color": {
      "field": "champion",
      "type": "nominal",
      "scale": {
        "domain": ["Roger Federer", "Rafael Nadal", "Novak Djokovic", "Andy Murray", "Stan Wawrinka", "Carlos Alcaraz", "Jannik Sinner"],
        "range": ["#3498db", "#e74c3c", "#9ACD32", "#f39c12", "#8e44ad", "#FF8C00", "#16a085"]
      },
      "legend": {
        "title": "Champion",
        "orient": "right",
        "titleFontSize": 14,
        "titleColor": "#9ACD32",
        "labelFontSize": 11,
        "columns": 1
      }
    },
    "opacity": {
      "condition": {
        "param": "tournament_select",
        "value": 1
      },
      "value": 0.2
    },
    "tooltip": [
      {
        "field": "year",
        "type": "ordinal",
        "title": "Year"
      },
      {
        "field": "tournament",
        "type": "nominal",
        "title": "Tournament"
      },
      {
        "field": "champion",
        "type": "nominal",
        "title": "Champion"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent",
      "strokeWidth": 0
    },
    "axis": {
      "domain": true,
      "ticks": true
    }
  }
}

