{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Grand Slam Dominance: The Big Three Era (2005-2025)",
    "fontSize": 20,
    "fontWeight": "bold",
    "color": "#9ACD32"
  },
  "description": "Heatmap showing which players won Grand Slam tournaments each year, revealing the unprecedented dominance of Federer, Nadal, and Djokovic.",
  "data": {
    "url": "grand_slam_champions_timeline.csv"
  },
  "width": 900,
  "height": 400,
  "params": [
    {
      "name": "tournament_select",
      "select": {
        "type": "point",
        "fields": ["tournament"]
      },
      "bind": "legend"
    }
  ],
  "mark": {
    "type": "rect",
    "tooltip": true,
    "cursor": "pointer"
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "titleFontWeight": "bold",
        "titleColor": "#9ACD32",
        "labelAngle": -45,
        "titleFontSize": 16,
        "labelFontSize": 11
      }
    },
    "y": {
      "field": "tournament",
      "type": "nominal",
      "title": "Grand Slam Tournament",
      "sort": ["Australian Open", "French Open", "Wimbledon", "US Open"],
      "axis": {
        "titleFontWeight": "bold",
        "titleColor": "#9ACD32",
        "titleFontSize": 16,
        "labelFontSize": 12
      }
    },
    "color": {
      "field": "champion",
      "type": "nominal",
      "scale": {
        "domain": ["Novak Djokovic", "Rafael Nadal", "Roger Federer", "Carlos Alcaraz", "Jannik Sinner", "Andy Murray", "Stan Wawrinka", "Marin Čilić", "Dominic Thiem", "Daniil Medvedev", "Juan Martín del Potro", "Marat Safin"],
        "range": ["#3498db", "#e67e22", "#8e44ad", "#e91e63", "#27ae60", "#95a5a6", "#e74c3c", "#2c3e50", "#1abc9c", "#c0392b", "#f4d03f", "#34495e"]
      },
      "legend": null
    },
    "opacity": {
      "condition": {
        "param": "tournament_select",
        "value": 1
      },
      "value": 0.2
    },
    "tooltip": [
      {
        "field": "year",
        "type": "ordinal",
        "title": "Year"
      },
      {
        "field": "tournament",
        "type": "nominal",
        "title": "Tournament"
      },
      {
        "field": "champion",
        "type": "nominal",
        "title": "Champion"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent",
      "strokeWidth": 0
    },
    "axis": {
      "domain": true,
      "ticks": true
    }
  }
}

